# ----------------------------------------
# Editor
# ----------------------------------------
export EDITOR="vim"

# ----------------------------------------
# Man Pages
# ----------------------------------------
export MANPAGER="less -X"
export LESS_TERMCAP_md="$ORANGE"  # Highlight section titles (if $ORANGE is set elsewhere)

# ----------------------------------------
# Shell History
# ----------------------------------------
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"

# ----------------------------------------
# Terminal Colors (iTerm2, etc.)
# ----------------------------------------
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

# ----------------------------------------
# Poetry
# ----------------------------------------
# Add Poetry to PATH (adjust if installed differently)
export PATH="$HOME/.local/bin:$PATH"

# Optional: Poetry shell completions
# Uncomment if you want completions and Poetry is installed this way
# eval "$(poetry completions zsh)"

# ----------------------------------------
# Miscellaneous
# ----------------------------------------
# Prevent core dumps (if you care about system performance/stability)
ulimit -c 0
